<div {{ attributes.defaults(stimulus_controller('ProjectBoardController')) }} class="row">
    <div class="col-md-3 col-sm-12 mb-3">
        {{ _self.card('bi-star-fill', 'New', '2', readyIssues) }}
    </div>

    <div class="col-md-3 col-sm-12 mb-3">
        {{ _self.card('bi-clock-fill', 'Ready', '2', readyIssues) }}
    </div>

    <div class="col-md-3 col-sm-12 mb-3">
        {{ _self.card('bi-braces-asterisk', 'In progress', '3', inProgressIssues) }}
    </div>

    <div class="col-md-3 col-sm-12 mb-3">
        {{ _self.card('bi-check-circle-fill', 'Solved', '5', resolvedIssues) }}
    </div>
</div>

{% macro card(icon, title, statusId, issues) %}
    <div class="card">
        <div class="card-header fw-bold text-center text-uppercase"><i class="bi {{ icon }}"></i> {{ title }}</div>
        <div class="card-body">
            <div class="list-group pb-4 issue-container" data-status="{{ statusId }}">
                {% for issue in issues %}
                    <button class="list-group-item list-group-item-action issue-item" id="{{ issue.id }}" draggable=true>
                        <a class="fw-bold text-decoration-none" draggable=false href="{{ path('issue_show', { 'id': issue.id }) }}">{{ issue.keyCode }}</a>
                        <br>
                        <span class="small">{{ issue.summary }}</span>
                    </button>
                {% endfor %}
            </div>
        </div>
    </div>
{% endmacro %}
